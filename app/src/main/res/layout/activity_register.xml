<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/register_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_gravity="center"
                android:layout_marginStart="25dp"
                android:contentDescription="TODO"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/opensans_semibold_0"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Freelancer Plus"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:gravity="start"
            android:paddingTop="8dp"
            android:fontFamily="@font/opensans_bold"
            android:paddingBottom="8dp"
            android:layout_marginTop="25sp"
            android:layout_marginStart="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join our growing freelance community to get your work done by professionals."
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:gravity="start"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="5dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25sp"
            android:fontFamily="@font/opensans_regular"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/dark_grey"/>

        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alex Jhon"
            android:background="@null"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/text_color"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:inputType="text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/opensans_regular"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/dark_grey"/>

        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email@gmail.com"
            android:background="@null"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/text_color"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:inputType="text" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginStart="25sp"
            android:fontFamily="@font/opensans_regular"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/dark_grey"/>

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@null"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/text_color"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:inputType="textPassword" />

        <RadioGroup
            android:id="@+id/register_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/register_Seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller"
                android:buttonTint="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:fontFamily="@font/opensans_semibold_0"
                android:layout_marginEnd="10dp"/>

            <RadioButton
                android:id="@+id/register_Buyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:fontFamily="@font/opensans_semibold_0"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:text="Buyer"/>

        </RadioGroup>

        <CheckBox
            android:id="@+id/register_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I accept the Terms and Conditions."
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/register_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Sign Up"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:fontFamily="@font/opensans_semibold_0"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:background="@drawable/button_background"/>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/register_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="35dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have account ? "
                android:textColor="@color/dark_grey"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>