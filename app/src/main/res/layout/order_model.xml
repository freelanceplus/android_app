<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/order_model_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_margin="5dp"
        app:strokeWidth="1dp"
        app:cardElevation="2dp"
        app:strokeColor="#20041F60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/image"
                app:civ_border_width="2dp"
                android:layout_margin="15dp"
                app:civ_border_color="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_model_buyerName"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="Usman Shah"
                        android:fontFamily="@font/opensans_semibold_0"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

                    <TextView
                        android:id="@+id/order_model_deadline"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="April 6, 2020"
                        android:gravity="end"
                        android:paddingEnd="5dp"
                        android:textSize="13.5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/order_model_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Design and develop android app in android studio using advance concepts."
                    android:maxLines="2"
                    android:ellipsize="marquee"
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

                <TextView
                    android:id="@+id/order_model_Des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Design and develop android app in android studio using advance concepts."
                    android:maxLines="2"
                    android:textSize="13dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="marquee"
                    android:textColor="@color/dark_grey"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_model_status"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:background="@drawable/board_layout"
                        android:textColor="#2ca366"
                        android:textSize="13.5dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

                    <TextView
                        android:id="@+id/order_model_price"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="PKR 15,000"
                        android:gravity="end"
                        android:paddingEnd="5dp"
                        android:textColor="#2ca366"
                        android:textSize="13.5dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>