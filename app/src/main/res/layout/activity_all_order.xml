<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    tools:context=".Activities.AllOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/all_order_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_left_arrow"
            android:contentDescription="TODO"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Sales"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_regular"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"/>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMinWidth="?actionBarSize"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabIndicatorHeight="4dp"
        app:tabTextColor="@color/dark_grey"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:tabMode="fixed"/>

    <ListView
        android:id="@+id/orders_listview"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="5dp"
        android:layout_height="match_parent"/>


</LinearLayout>